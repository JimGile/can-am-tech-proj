@page
@model LibraryApp.Pages.Books.IndexModel
@{
    ViewData["Title"] = "Books";
}

<h1>Books</h1>

<p>
    <a asp-page="./Edit" class="btn btn-primary">Create New Book</a>
    <a asp-page="/Index" class="btn btn-secondary">Home</a>
</p>

<table class="table table-striped">
    <thead>
        <tr>
            <th>#</th>
            <th>Title</th>
            <th>Author</th>
            <th>Category</th>
            <th>Available</th>
            <th>Created</th>
            <th></th>
        </tr>
    </thead>
    <tbody>
@foreach (var b in Model.Books)
{
    <tr>
        <td>@b.BookId</td>
        <td>@b.Title</td>
        <td>@b.Author</td>
        <td>@(b.CategoryId?.ToString() ?? "-")</td>
        <td>@(b.IsAvailable ? "Yes" : "No")</td>
        <td>@b.DateCreated.ToLocalTime().ToString("g")</td>
        <td>
            <a asp-page="./Edit" asp-route-id="@b.BookId">Edit</a>
            |
            <form method="post" asp-page-handler="Delete" asp-route-id="@b.BookId" style="display:inline" onsubmit="return confirm('Delete this book?');">
                <button type="submit" class="btn btn-link">Delete</button>
            </form>
        </td>
    </tr>
}
    </tbody>
</table>
